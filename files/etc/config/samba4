
config samba
	option bind_interfaces_only '1'
	option charset 'UTF-8'
	option description 'Samba on NanoPC-T6'
	option disable_netbios '1'
	option enable_ipv6 '1'
	option interface '0.0.0.0/0 ::/0'
	option macos '1'
	option name 'NanoPC-T6'
	option workgroup 'NanoPC-T6'

config sambashare
	option create_mask '0777'
	option dir_mask '0777'
	option guest_ok 'no'
	option name 'nvme0n1p1'
	option path '/mnt/nvme0n1p1'
	option read_only 'no'
	option users 'root'

